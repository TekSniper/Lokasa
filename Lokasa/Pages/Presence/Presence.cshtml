@page
@model Lokasa.Pages.Presence.PresenceModel
@{
    ViewData["title"] = "Presence";
}
<h3 class="title">Présence des agents</h3>
<div class="mb-4">
    <form method="get">
        <h5 class="subtitle">Filtre</h5>
        <div class="columns">
            <div class="column is-3">
                <div class="field">
                    <div class="control">
                        <input type="date" name="date" class="input" id="date" />
                    </div>
                </div>
            </div>
            <div class="column is-4">
                <div class="field has-addons">
                    <div class="control">
                        <input type="text" name="agent" class="input"p placeholder="Login ou Email des l'agent" />
                    </div>
                    <div class="control">
                        <input type="submit" value="Filtrez" class="button is-link" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
        <tr>
            <th>#</th>
            <th>ID Agent</th>
            <th>Jour</th>
            <th>Date</th>
            <th>Arrivée</th>
            <th>Départ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.presences)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.IdAgent</td>
                <td>@item.Jour</td>
                <td>@item.DatePresence</td>
                <td>@item.HeureArrivee</td>
                <td>@item.HeureDepart</td>
            </tr>
        }
    </tbody>